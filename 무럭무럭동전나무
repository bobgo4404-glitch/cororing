    <script>
        const game = {
            state: {
                coins: 0,
                clickPower: 1,
                autoIncome: 0,
                clickCost: 10,
                autoCost: 50,
                critLevel: 0,
                critCost: 200,
                treeLevel: 0,
                lastSaveTime: Date.now() // ë§ˆì§€ë§‰ ì €ì¥ ì‹œê°„ ì¶”ì 
            },

            // ì§„í™” ë°ì´í„°
            treeStages: [
                { limit: 0, emoji: "ğŸŒ±", name: "Lv.1 ì‘ì€ ì”¨ì•—" },
                { limit: 100, emoji: "ğŸŒ¿", name: "Lv.2 íŒŒë¦‡í•œ ìƒˆì‹¹" },
                { limit: 1000, emoji: "ğŸ‹", name: "Lv.3 ë¬´ëŸ­ë¬´ëŸ­ ëŒ€ë‚˜ë¬´" },
                { limit: 5000, emoji: "ğŸŒ³", name: "Lv.4 íŠ¼íŠ¼í•œ ì°¸ë‚˜ë¬´" },
                { limit: 20000, emoji: "ğŸŒ²", name: "Lv.5 ìš¸ì°½í•œ ì „ë‚˜ë¬´" },
                { limit: 100000, emoji: "ğŸŒ´", name: "Lv.6 ì—´ëŒ€ì˜ ì•¼ììˆ˜" },
                { limit: 500000, emoji: "ğŸ„", name: "Lv.7 ì¶•ë³µì˜ íŠ¸ë¦¬" },
                { limit: 2500000, emoji: "ğŸ’°", name: "Lv.8 í™©ê¸ˆ ëˆë‚˜ë¬´" },
                { limit: 10000000, emoji: "ğŸ’", name: "Lv.9 ì‹ ë¹„í•œ ë³´ì„ë‚˜ë¬´" },
                { limit: 50000000, emoji: "ğŸŒŒ", name: "Lv.MAX ìš°ì£¼ ìƒëª…ìˆ˜" }
            ],

            init() {
                this.cacheDOM();
                this.loadGame(); // ë¡œë“œ ì‹œ ì˜¤í”„ë¼ì¸ ê³„ì‚° í¬í•¨
                this.bindEvents();
                this.startGameLoop();
                this.render();
            },

            cacheDOM() {
                this.dom = {
                    score: document.getElementById('score'),
                    cps: document.getElementById('cps'),
                    treeEmoji: document.getElementById('tree-emoji'),
                    levelBadge: document.getElementById('level-badge'),
                    progressBar: document.getElementById('progress-bar'),
                    progressText: document.getElementById('progress-text'),
                    clickArea: document.getElementById('click-area'),
                    
                    btnClick: document.getElementById('btn-upgrade-click'),
                    btnAuto: document.getElementById('btn-upgrade-auto'),
                    btnCrit: document.getElementById('btn-upgrade-crit'),

                    modal: document.getElementById('offline-modal'),
                    offlineEarnText: document.getElementById('offline-earn')
                };
            },

            bindEvents() {
                this.dom.clickArea.addEventListener('click', (e) => this.clickTree(e));
                document.addEventListener('dblclick', (e) => e.preventDefault(), { passive: false });
                
                // íƒ­ ë‹«ê±°ë‚˜ ìˆ¨ê²¨ì§ˆ ë•Œ ì €ì¥
                document.addEventListener("visibilitychange", () => {
                    if (document.visibilityState === 'hidden') {
                        this.saveGame();
                    }
                });
            },

            clickTree(e) {
                const critChance = this.state.critLevel * 0.05; 
                const isCrit = Math.random() < critChance;
                const gain = isCrit ? this.state.clickPower * 3 : this.state.clickPower;
                
                this.state.coins += gain;
                
                if (navigator.vibrate) navigator.vibrate(isCrit ? 50 : 5);
                this.createFloatingText(e.clientX, e.clientY, `+${gain}`, isCrit);
                
                const tree = this.dom.treeEmoji;
                tree.style.transform = 'scale(0.9)';
                setTimeout(() => tree.style.transform = 'scale(1)', 100);

                this.checkEvolution();
                this.render();
            },

            createFloatingText(x, y, text, isCrit = false) {
                const el = document.createElement('div');
                el.className = isCrit ? 'click-effect critical' : 'click-effect';
                el.innerText = isCrit ? `ëŒ€ë°•! ${text}` : text;
                
                const posX = x || window.innerWidth / 2;
                const posY = y || window.innerHeight / 2;
                el.style.left = `${posX}px`;
                el.style.top = `${posY - 30}px`;
                
                document.body.appendChild(el);
                setTimeout(() => el.remove(), 800);
            },

            buyUpgrade(type) {
                if (type === 'click' && this.state.coins >= this.state.clickCost) {
                    this.state.coins -= this.state.clickCost;
                    this.state.clickPower += 1;
                    this.state.clickCost = Math.floor(this.state.clickCost * 1.5);
                } else if (type === 'auto' && this.state.coins >= this.state.autoCost) {
                    this.state.coins -= this.state.autoCost;
                    this.state.autoIncome += 1;
                    this.state.autoCost = Math.floor(this.state.autoCost * 1.5);
                } else if (type === 'crit' && this.state.coins >= this.state.critCost) {
                    this.state.coins -= this.state.critCost;
                    this.state.critLevel += 1;
                    this.state.critCost = Math.floor(this.state.critCost * 2.0);
                }
                this.render();
                this.saveGame();
            },

            checkEvolution() {
                let currentStageIndex = 0;
                for (let i = 0; i < this.treeStages.length; i++) {
                    if (this.state.coins >= this.treeStages[i].limit) {
                        currentStageIndex = i;
                    }
                }

                if (currentStageIndex > this.state.treeLevel) {
                    this.state.treeLevel = currentStageIndex;
                    this.dom.treeEmoji.classList.remove('evolution-anim');
                    void this.dom.treeEmoji.offsetWidth;
                    this.dom.treeEmoji.classList.add('evolution-anim');
                    
                    this.createFloatingText(window.innerWidth/2, window.innerHeight/2 - 100, "ğŸ‰ ì§„í™” ì„±ê³µ!");
                }
            },

            startGameLoop() {
                setInterval(() => {
                    if (this.state.autoIncome > 0) {
                        this.state.coins += this.state.autoIncome;
                        this.checkEvolution();
                        this.render();
                        
                        // ìë™ ì €ì¥ (10ì´ˆë§ˆë‹¤ - ë„ˆë¬´ ì¦ì€ ì €ì¥ì€ ì„±ëŠ¥ ì´ìŠˆ ë°©ì§€)
                        // ë‹¨, now() ì‹œê°„ ì—…ë°ì´íŠ¸ë¥¼ ìœ„í•´ ë§¤ í‹±ë§ˆë‹¤ lastSaveTime ê°±ì‹ í•˜ì§€ ì•Šê³  
                        // ì‹¤ì œ ì €ì¥ ì‹œì ì—ë§Œ ê°±ì‹ í•˜ê±°ë‚˜, ì—¬ê¸°ì„œëŠ” ê°’ë§Œ ë”í•˜ê³  render
                    }
                }, 1000);

                // 5ì´ˆë§ˆë‹¤ ìë™ ì €ì¥
                setInterval(() => {
                    this.saveGame();
                }, 5000);
            },

            saveGame() {
                this.state.lastSaveTime = Date.now();
                // ë°ì´í„° ë‚œë…í™” (Base64) - ê°„ë‹¨í•œ ì¡°ì‘ ë°©ì§€
                const data = JSON.stringify(this.state);
                const encoded = btoa(encodeURIComponent(data)); 
                localStorage.setItem('moneyTreeSaveV2', encoded);
            },

            loadGame() {
                const save = localStorage.getItem('moneyTreeSaveV2');
                if (save) {
                    try {
                        const decoded = decodeURIComponent(atob(save));
                        const parsed = JSON.parse(decoded);
                        
                        // ì˜¤í”„ë¼ì¸ ìˆ˜ìµ ê³„ì‚°
                        const now = Date.now();
                        const lastTime = parsed.lastSaveTime || now;
                        const diffSeconds = Math.floor((now - lastTime) / 1000);
                        
                        // ìµœëŒ€ 24ì‹œê°„ê¹Œì§€ë§Œ ì¸ì • (ë°¸ëŸ°ìŠ¤ ì¡°ì ˆ)
                        const validSeconds = Math.min(diffSeconds, 86400);
                        
                        if (validSeconds > 10 && parsed.autoIncome > 0) {
                            const earned = validSeconds * parsed.autoIncome;
                            parsed.coins += earned;
                            
                            // ëª¨ë‹¬ í‘œì‹œ
                            this.dom.offlineEarnText.innerText = earned.toLocaleString();
                            this.dom.modal.classList.add('active');
                        }

                        this.state = { ...this.state, ...parsed };
                    } catch (e) {
                        console.error("Save load failed", e);
                        // êµ¬ë²„ì „(V1) ë§ˆì´ê·¸ë ˆì´ì…˜ ì‹œë„ ë“± ë¡œì§ ê°€ëŠ¥
                    }
                }
            },

            closeModal() {
                this.dom.modal.classList.remove('active');
                // íš¨ê³¼ìŒ ì¬ìƒ ë“± ê°€ëŠ¥
            },

            render() {
                this.dom.score.innerText = Math.floor(this.state.coins).toLocaleString();
                this.dom.cps.innerText = this.state.autoIncome.toLocaleString();
                
                // ë‚˜ë¬´ & ë ˆë²¨
                const currentStage = this.treeStages[this.state.treeLevel];
                const nextStage = this.treeStages[this.state.treeLevel + 1];
                
                this.dom.treeEmoji.innerText = currentStage.emoji;
                this.dom.levelBadge.innerText = currentStage.name;

                // ê²Œì´ì§€ ë°” ì—…ë°ì´íŠ¸
                if (nextStage) {
                    // í˜„ì¬ ë‹¨ê³„ì˜ ì‹œì‘ì ë¶€í„° ë‹¤ìŒ ë‹¨ê³„ê¹Œì§€ì˜ ë¹„ìœ¨ ê³„ì‚°
                    const prevLimit = currentStage.limit;
                    const target = nextStage.limit;
                    const current = this.state.coins;
                    
                    let percentage = 0;
                    if (current >= target) {
                        percentage = 100;
                    } else {
                        // (í˜„ì¬ë³´ìœ  - ì´ì „ì»·) / (ë‹¤ìŒì»· - ì´ì „ì»·) * 100
                        const range = target - prevLimit;
                        const progress = current - prevLimit;
                        // ì´ˆê¸° 0ë ˆë²¨ì¼ ë•Œ ì˜ˆì™¸ì²˜ë¦¬
                        const safeRange = range <= 0 ? target : range; 
                        
                        percentage = Math.min(100, Math.max(0, (progress / safeRange) * 100));
                    }
                    
                    this.dom.progressBar.style.width = `${percentage}%`;
                    this.dom.progressText.innerText = `ë‹¤ìŒ ì§„í™”ê¹Œì§€: ${(target - current).toLocaleString()}ì› ë‚¨ìŒ`;
                } else {
                    this.dom.progressBar.style.width = '100%';
                    this.dom.progressText.innerText = 'ìµœê³  ë ˆë²¨ ë‹¬ì„±! ì „ì„¤ì´ ë˜ì…¨êµ°ìš”!';
                }

                // ë²„íŠ¼ ìƒíƒœ
                this.updateButton(this.dom.btnClick, this.state.clickCost, `+1 ê°•í™” (${this.state.clickCost.toLocaleString()}ì›)`);
                this.updateButton(this.dom.btnAuto, this.state.autoCost, `+1ê°œ/ì´ˆ (${this.state.autoCost.toLocaleString()}ì›)`);
                
                const nextCritChance = (this.state.critLevel + 1) * 5;
                this.updateButton(this.dom.btnCrit, this.state.critCost, `í™•ë¥  ${nextCritChance}%ë¡œ UP (${this.state.critCost.toLocaleString()}ì›)`);
            },

            updateButton(btn, cost, text) {
                btn.innerText = text;
                if (this.state.coins >= cost) {
                    btn.disabled = false;
                    btn.style.opacity = 1;
                } else {
                    btn.disabled = true;
                    btn.style.opacity = 0.5;
                }
            }
        };

        window.onload = () => game.init();

    </script>
</body>
</html>
